<%- include("partials/header") -%>

    <div class="blogTC">
    <h1><%= blogTitle %></h1>
    <div class="postAuthr">by <span><%= blogAuthor %></span> on <p class="post-date-font" style="display: inline;"><%= blogDate.substring(4,15) %> </p>
    </div>
    <p><%= blogContent %></p>
    </div>

    <div class="likes-comment-delete">
        <div style="display: flex;">
        <h4 style="margin: auto 0px;"><%= blogLikes %></h4>
        <form  action="/likes/<%= blogURL %>" method="POST">
            <button class="btn like" type="submit">
                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor" class="bi bi-hand-thumbs-up-fill" viewBox="0 0 16 16">
                    <path d="M6.956 1.745C7.021.81 7.908.087 8.864.325l.261.066c.463.116.874.456 1.012.965.22.816.533 2.511.062 4.51a9.84 9.84 0 0 1 .443-.051c.713-.065 1.669-.072 2.516.21.518.173.994.681 1.2 1.273.184.532.16 1.162-.234 1.733.058.119.103.242.138.363.077.27.113.567.113.856 0 .289-.036.586-.113.856-.039.135-.09.273-.16.404.169.387.107.819-.003 1.148a3.163 3.163 0 0 1-.488.901c.054.152.076.312.076.465 0 .305-.089.625-.253.912C13.1 15.522 12.437 16 11.5 16H8c-.605 0-1.07-.081-1.466-.218a4.82 4.82 0 0 1-.97-.484l-.048-.03c-.504-.307-.999-.609-2.068-.722C2.682 14.464 2 13.846 2 13V9c0-.85.685-1.432 1.357-1.615.849-.232 1.574-.787 2.132-1.41.56-.627.914-1.28 1.039-1.639.199-.575.356-1.539.428-2.59z"/>
                  </svg>
            </button>
        </form>
        <h4 class="normal-heading-font" style="margin: auto 10px;"> <%= commentsArr.length %> <% if(commentsArr.length>1 || commentsArr.length===0) { %> comments <% } else  {%> comment <% } %></h4>
        </div>
        <div>
        <form  action="/delete/<%= blogURL %>" method="POST">
            <button class="btn btn-dark del" type="submit">Delete blog</button>
        </form>
        </div>
    </div>

    <div class="commentBox">
        <form action="/posts/comments/<%= blogURL %>" method="POST" style="margin-bottom: 20px;">
            
            <div class="form-group row">
                <label class="col-sm-2 col-form-label">Name</label>
                <div class="col-sm-8">
                <input class="form-control" type="text" name="name" placeholder="Name" required></input>
                </div>
            </div>

            <div class="form-group row">
                <label class="col-sm-2 col-form-label">Comment</label>
                <div class="col-sm-8">
                <input class="form-control" type="text" name="content" placeholder="Add a comment" required></input>
                </div>
            </div>
            <button class="btn btn-primary commenting" type="submit" name="publish">Comment</button>
        </form>
    </div>

    <% for(var i=0; i<commentsArr.length; i++) { %>
        <div class="comment">
            <div style="display: flex; flex-wrap: wrap;">
            <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" fill="currentColor" class="bi bi-person-circle" viewBox="0 0 16 16">
                <path d="M11 6a3 3 0 1 1-6 0 3 3 0 0 1 6 0z"/>
                <path fill-rule="evenodd" d="M0 8a8 8 0 1 1 16 0A8 8 0 0 1 0 8zm8-7a7 7 0 0 0-5.468 11.37C3.242 11.226 4.805 10 8 10s4.757 1.225 5.468 2.37A7 7 0 0 0 8 1z"/>
            </svg> 

                <div style="display: flex; flex-direction: column; margin-left: 8px;">
                <p class="authr"><%= commentsArr[i].name %></p>
                <p class="post-date-font"><%= commentsArr[i].timestamp %></p>
                <p style="font-size: 18px;"><%= commentsArr[i].content %></p>
                </div>
            </div>
            
            <hr/>
        </div>
    <% } %>

<%- include("partials/footer") -%>